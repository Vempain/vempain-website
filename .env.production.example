# Copy to .env.production and adjust values for your environment
APP_ENV=prod
APP_DEBUG=false
APP_URL=https://my.host.name

# Secret used by the PHP backend for JWT signing
JWT_SECRET=change_me
JWT_TTL_SECONDS=1200

# Public hostname served by Apache/Traefik
TRAEFIK_SITE_HOST=my.host.name

# Host directories mounted into the backend container
VEMPAIN_WEBSITE_WEB_ROOT=/srv/vempain/files
ENV_VEMPAIN_SITE_LOG_VOLUME=/srv/vempain/logs

# PostgreSQL configuration used by the backend and db container
ENV_VEMPAIN_SITE_DB_HOST=vempain-site-db
ENV_VEMPAIN_SITE_DB_PORT=5432
ENV_VEMPAIN_SITE_DB_NAME=vempain_site_db
ENV_VEMPAIN_SITE_DB_SCHEMA=vempain_site
ENV_VEMPAIN_SITE_DB_USER=vempain_site
ENV_VEMPAIN_SITE_DB_PASSWORD=change_me

# Optional: override Traefik network name if the default changes
TRAEFIK_NETWORK=site_net

