{
  "name": "vempain/vempain-website",
  "description": "Vempain Website",
  "type": "project",
  "require": {
    "doctrine/orm": "^3.5",
    "slim/slim": "^4.15",
    "php-di/php-di": "^7.1",
    "vlucas/phpdotenv": "^5.6",
    "firebase/php-jwt": "^6.10",
    "slim/psr7": "^1.7",
    "monolog/monolog": "^3.7",
    "symfony/password-hasher": "^7.1",
    "symfony/cache": "^7.3",
    "php-di/slim-bridge": "^3.4",
    "laminas/laminas-diactoros": "^3.8",
    "ext-pdo": "*",
    "symfony/var-exporter": "^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "license": "GPL-2.0",
  "autoload": {
    "psr-4": {
      "Vempain\\VempainWebsite\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Paul-Erik Törrönen",
      "email": "poltsi@poltsi.fi"
    }
  ],
  "scripts": {
    "lint": [
      "@phpstan",
      "@phpcs"
    ],
    "phpstan": "vendor/bin/phpstan analyse src --memory-limit=1G",
    "phpcs": "vendor/bin/phpcs src"
  }
}
