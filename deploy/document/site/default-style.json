{
  "color": {
    "background": "#0f0f0f",
    "surface": "#161616",
    "surfaceAlt": "#1f1f1f",
    "text": "#f5f5f5",
    "textMuted": "#b8b8b8",
    "border": "#2a2a2a",
    "primary": "#1677ff",
    "primaryHover": "#4096ff",
    "link": "#69b1ff",
    "danger": "#ff4d4f",
    "success": "#52c41a",
    "warning": "#faad14"
  },
  "layout": {
    "header": {
      "background": "#191919",
      "height": "64px"
    },
    "sider": {
      "background": "#141414",
      "minWidth": "320px",
      "maxWidth": "720px"
    },
    "content": {
      "maxWidth": "1200px",
      "padding": "16px"
    }
  },
  "typography": {
    "fontFamily": "system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
    "baseFontSize": "16px",
    "lineHeight": "1.5",
    "headingWeight": "600"
  },
  "radius": {
    "sm": "4px",
    "md": "8px",
    "lg": "12px"
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,0.35)",
    "md": "0 6px 18px rgba(0,0,0,0.35)"
  },
  "gallery": {
    "thumb": {
      "width": "250px",
      "height": "166px",
      "gap": "12px",
      "maxColumns": 5
    }
  },
  "components": {
    "logo": {
      "fontSize": "18px",
      "fontWeight": "700",
      "padding": "16px",
      "color": "#ffffff"
    },
    "card": {
      "background": "#161616",
      "borderColor": "#2a2a2a",
      "padding": "12px"
    }
  }
}

